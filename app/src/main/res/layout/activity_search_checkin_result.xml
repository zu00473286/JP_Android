<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg_white"
    android:baselineAligned="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:id="@+id/title"
        android:src="@drawable/app_bg_h" />

    <LinearLayout
        android:background="@drawable/app_bg_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/button_background"
            android:id="@+id/pageLabel"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="onJPMune" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:onClick="onPrve"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:background="@drawable/myborderwithcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/hint"
                android:text="長按開啟詳細資料"
                style="@style/TextViewStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                style="@style/TextViewStyle"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/myborder"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="出勤日期"
                android:textAlignment="center" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:id="@+id/rtScroll"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="1640dp"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/text2"
                        style="@style/TextViewStyle"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="姓名"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text3"
                        style="@style/TextViewStyle"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="星期"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/text4"
                        style="@style/TextViewStyle"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="上班時間"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text5"
                        style="@style/TextViewStyle"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="下班時間"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text6"
                        style="@style/TextViewStyle"
                        android:layout_width="175dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="休息時間1起"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text7"
                        style="@style/TextViewStyle"
                        android:layout_width="175dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="休息時間1終"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text8"
                        style="@style/TextViewStyle"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="加班上班"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text9"
                        style="@style/TextViewStyle"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/myborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="加班下班"
                        android:textAlignment="center" />


                </LinearLayout>
            </HorizontalScrollView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/lscroll"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/leftList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>

            <HorizontalScrollView
                android:id="@+id/rScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="1640dp"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:id="@+id/rscrollver"
                        android:layout_width="1640dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="1640dp"
                            android:layout_height="wrap_content">

                            <ListView
                                android:id="@+id/rightList"
                                android:layout_width="1640dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
