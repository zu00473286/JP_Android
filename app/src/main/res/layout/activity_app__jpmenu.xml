<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg_white"
    tools:context="com.example.apologize.js_app.APP_JPMenu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/checkintitle" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/app_bg_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            style="@style/TextViewStyle"
            android:id="@+id/RunningTextView" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

<!--            <ImageButton-->
<!--                android:id="@+id/Sub1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:background="@color/menu_imgbtn_tran"-->
<!--                android:onClick="onCheckIn"-->
<!--                android:src="@drawable/checkin" />-->
            <Button
                android:id="@+id/Sub1"
                android:background="@color/menu_imgbtn_tran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="打卡作業"
                android:textColor="#796400"
                android:textStyle="bold"
                android:onClick="onCheckIn"
                android:textSize="26sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

<!--            <ImageButton-->
<!--                android:id="@+id/Sub2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/menu_imgbtn_tran"-->
<!--                android:onClick="onPersonalAttendance"-->
<!--                android:src="@drawable/personal_search_attendance" />-->
            <Button
                android:id="@+id/Sub2"
                android:background="@color/menu_imgbtn_tran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="個人出勤查詢"
                android:textColor="#796400"
                android:textStyle="bold"
                android:onClick="onPersonalAttendance"
                android:textSize="26sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

<!--            <ImageButton-->
<!--                android:id="@+id/Sub3"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/menu_imgbtn_tran"-->
<!--                android:onClick="onAttendance"-->
<!--                android:src="@drawable/search_attendance_btn" />-->
            <Button
                android:id="@+id/Sub3"
                android:background="@color/menu_imgbtn_tran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="員工出勤查詢"
                android:textColor="#796400"
                android:textStyle="bold"
                android:onClick="onAttendance"
                android:textSize="26sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

<!--            <ImageButton-->
<!--                android:id="@+id/Sub4"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:background="@color/menu_imgbtn_tran"-->
<!--                android:onClick="onLeave"-->
<!--                android:src="@drawable/leave_request"-->
<!--                />-->
            <Button
                android:id="@+id/Sub4"
                android:background="@color/menu_imgbtn_tran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="請假作業"
                android:onClick="onLeave"
                android:textColor="#796400"
                android:textStyle="bold"
                android:textSize="26sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

<!--            <ImageButton-->
<!--                android:id="@+id/Sub5"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/menu_imgbtn_tran"-->
<!--                android:onClick="onReceiv"-->
<!--                android:src="@drawable/rece" />-->
            <Button
                android:id="@+id/Sub5"
                android:background="@color/menu_imgbtn_tran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="加班作業"
                android:textColor="#796400"
                android:textStyle="bold"
                android:onClick="onJiaban"
                android:textSize="26sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/Sub6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/menu_imgbtn_tran"
                android:onClick="onCharts"
                android:src="@drawable/chart"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/Sub7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/menu_imgbtn_tran"
                android:onClick="onInvent"
                android:src="@drawable/inventory"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/button_background"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/Menu_BtnLogOut"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:onClick="onLogOut"
                android:text="登出"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/Menu_BtnHome"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:onClick="onInvoicing"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="結束APP"
                android:background="@drawable/button_background"
                android:textColor="#FFF"
                android:onClick="onExit"
                android:id="@+id/Menu_BtnExit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
